u = [2; pi/2;];

f = @(t, x) [x(1)*cos(x(3)); x(1)*sin(x(3)); u(1); u(2)];

x0 = [1; 2; 0.5; pi / 3];
ts = [0 1];
AbsTol = [0.01; 0.01; 0.02; pi / 90];
RelTol = AbsTol;

options = odeset("AbsTol", norm(AbsTol), "RelTol", norm(RelTol));
x = ode45(f, ts, x0, options);

figure(1);
plot(x.x, x.y(1,:));

figure(2);
plot(x.y(1,:), x.y(2,:));